{
  "info": {
    "name": "Employee Tracking System API",
    "description": "Complete API collection for the employee tracking system backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          },
          "response": []
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["auth", "profile"]
            }
          },
          "response": []
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Updated\",\n  \"email\": \"john.updated@example.com\",\n  \"avatar\": \"https://example.com/avatar.jpg\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["auth", "profile"]
            }
          },
          "response": []
        },
        {
          "name": "Change Password",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"password123\",\n  \"newPassword\": \"newpassword123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/change-password",
              "host": ["{{base_url}}"],
              "path": ["auth", "change-password"]
            }
          },
          "response": []
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["auth", "logout"]
            }
          },
          "response": []
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/users",
              "host": ["{{base_url}}"],
              "path": ["auth", "users"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Tracking Management",
      "item": [
        {
          "name": "Start Break",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"startTime\": \"14:30\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/tracking/start-break",
              "host": ["{{base_url}}"],
              "path": ["tracking", "start-break"]
            }
          },
          "response": []
        },
        {
          "name": "End Break",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"endTime\": \"14:45\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/tracking/end-break",
              "host": ["{{base_url}}"],
              "path": ["tracking", "end-break"]
            }
          },
          "response": []
        },
        {
          "name": "Get Today's Data",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/tracking/today",
              "host": ["{{base_url}}"],
              "path": ["tracking", "today"]
            }
          },
          "response": []
        },
        {
          "name": "Get Today's Data (Specific Date)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/tracking/today?date=2025-01-20",
              "host": ["{{base_url}}"],
              "path": ["tracking", "today"],
              "query": [
                {
                  "key": "date",
                  "value": "2025-01-20"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get User Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/tracking/stats?period=week",
              "host": ["{{base_url}}"],
              "path": ["tracking", "stats"],
              "query": [
                {
                  "key": "period",
                  "value": "week"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Update Work Time",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"minutes\": 480\n}"
            },
            "url": {
              "raw": "{{base_url}}/tracking/work-time",
              "host": ["{{base_url}}"],
              "path": ["tracking", "work-time"]
            }
          },
          "response": []
        },
        {
          "name": "Get All Users (Tracking)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/tracking/users",
              "host": ["{{base_url}}"],
              "path": ["tracking", "users"]
            }
          },
          "response": []
        },
        {
          "name": "Get User Monthly Data",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/tracking/user/{{userId}}/monthly?month=1&year=2025",
              "host": ["{{base_url}}"],
              "path": ["tracking", "user", "{{userId}}", "monthly"],
              "query": [
                {
                  "key": "month",
                  "value": "1"
                },
                {
                  "key": "year",
                  "value": "2025"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get All Users Monthly Data",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/tracking/monthly?month=1&year=2025",
              "host": ["{{base_url}}"],
              "path": ["tracking", "monthly"],
              "query": [
                {
                  "key": "month",
                  "value": "1"
                },
                {
                  "key": "year",
                  "value": "2025"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5000/health",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["health"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "test",
      "script": {
        "exec": [
          "// Auto-save token after login",
          "if (pm.response.code === 200 && pm.request.url.path.includes('/auth/login')) {",
          "    const response = pm.response.json();",
          "    if (response.data && response.data.token) {",
          "        pm.environment.set('token', response.data.token);",
          "        console.log('Token saved automatically');",
          "    }",
          "}",
          "",
          "// Auto-save user ID after login for testing",
          "if (pm.response.code === 200 && pm.request.url.path.includes('/auth/login')) {",
          "    const response = pm.response.json();",
          "    if (response.data && response.data.user && response.data.user.id) {",
          "        pm.environment.set('userId', response.data.user.id);",
          "        console.log('User ID saved automatically');",
          "    }",
          "}"
        ],
        "type": "text/javascript"
      }
    }
  ]
}
